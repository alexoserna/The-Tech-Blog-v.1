<section class="flex-row justify-center">
    <div class="col-sm-12  col-md-10 col-lg-8 col-xl-6 card">
        <div class="card-header">
            <h2 class="flex-row justify-center">Signup</h2>
        </div>
        <div class="card-body col-8" id="signup-form">
            <form>
                <div class="mb-4 input-card p-2">
                    <label for="email" class="form-label pl-2">Email address</label>
                    <input type="email" placeholder="example@exmpl.com" class="form-control border-0 inp" id="email" />
                </div>
                <div class="mb-4 input-card p-2">
                    <label for="username-input-signup" class="form-label pl-2">Username</label>
                    <input type="text" placeholder="elitedarklord_dragonslayer_3.14159" class="form-control border-0 inp" id="username-input-signup" />
                </div>
                <div class="mb-4 input-card p-2">
                    <label for="password-input-signup" class="form-label pl-2">Password</label>
                    <input type="text" placeholder="*********" class="form-control border-0 inp" id="password-input-signup" />
                </div>
                <button class="btn" type="submit" id="signup-form">Create Account</button>
            </form>
            <a href="/login" id="signupLink">Login instead</a>
        </div>
    </div>
</section>

<script src="/js/signup.js"></script>