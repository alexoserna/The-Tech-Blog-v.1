<section class="flex-row justify-center">
    <div class="col-sm-12  col-md-8 col-lg-6 col-xl-3 max-w card">
        <div class="card-header">
            <h2 class="flex-row justify-center">Login to your Account</h2>
        </div>
        <div class="card-body col-8">
            <form id="login-form">
                <div class="mb-4 input-card p-2">
                    <label for="email" class="form-label pl-2">Username</label>
                    <input type="email" placeholder="example@exmpl.com" class="form-control border-0 inp"
                        id="username-input-login" aria-describedby="emailHelp" />
                </div>
                <div class="mb-4 input-card p-2">
                    <label for="password" class="form-label pl-2">Password</label>
                    <input type="password" placeholder="*********" class="form-control border-0 inp"
                        id="password-input-login" />
                </div>
                <div class="mb-3 form-check">
                </div>
                <button class="btn" type="submit" id="loginBtn">Login</button>
            </form>
            <a class="flex-row justify-center" href="/signup" id="signupLink">Create Account</a>
        </div>
    </div>
</section>